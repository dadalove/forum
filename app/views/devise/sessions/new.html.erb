
<div class="signin_page">
  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <%#= f.label :email %>
    <div class="col-sm-12">
    <input type="text" class="form-control" placeholder="Email", <%= f.email_field :email, autofocus: true %>
    </div>
    
    <br />
    <br>
    <%#= f.label :password %>

    <div class="form-group">
      <!-- <label for="inputPassword" class="col-sm-2 control-label">Password</label> -->
      <div class="col-sm-12 ">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password", <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
   
    <br />
    
    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

     <%= f.submit "Sign in", :class => "signin_btn" %>

  <% end %>

  <div class="other_link"><%= render "devise/shared/links" %></div>
</div>

