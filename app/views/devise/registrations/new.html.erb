<div class="signup_page">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%#= f.label :name,'name' %>
    <div class="col-sm-12">
    <input type="text" class="form-control" placeholder="Name", <%= f.text_field :name %> 
    </div>


    <%#= f.label :email %>
    <div class="col-sm-12">
    <input type="text" class="form-control" placeholder="Email", <%= f.email_field :email, autofocus: true %>
    </div>



      <%#= f.label :password %>
      <div class="form-group">
        <div class="col-sm-12 ">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password", <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>


    <%#= f.label :password_confirmation %>
    <div class="form-group">
      <div class="col-sm-12 ">
      <input type="password" class="form-control" id="inputPassword" placeholder="Password Confirmation", <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>


     <div><%= f.submit "Sign up", :class => "signup_btn" %></div>

    <div class="other_link"><%= render "devise/shared/links" %></div>

  <% end %>
</div>